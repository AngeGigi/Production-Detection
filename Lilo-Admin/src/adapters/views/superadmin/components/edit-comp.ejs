<div id="editCompanyModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Employee Company</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="editErrorMessages" class="d-none alert alert-danger" role="alert"></div>
                <form id="editCompanyForm" action="/view-company" method="POST">
                    <div class="row g-4">
                        <!-- Left Column -->
                        <div class="col-12 col-md-6">
                            <input type="hidden" id="editCompCode" name="compCode" />
                            <div class="mb-3">
                                <label for="editCompUser" class="form-label">Company User *</label>
                                <input type="text" id="editCompUser" name="compUser" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="editCompName" class="form-label">Company Name *</label>
                                <input type="text" id="editCompName" name="compName" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="editCompEmail" class="form-label">Email *</label>
                                <input type="email" id="editCompEmail" name="compEmail" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="compAddress" class="form-label">Company Address *</label>
                                <input type="text" id="editCompAddress" name="compAddress" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="editCompNum" class="form-label">Contact Number *</label>
                                <input type="text" id="editCompNum" name="compNum" class="form-control" required>
                            </div>
                        </div>
                        <!-- Right Column -->
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="editSubType" class="form-label">Subscription Type *</label>
                                <select id="editSubType" name="subType" class="form-select">
                                    <option value="Trial">Trial</option>
                                    <option value="Premium">Premium</option>
                                    <option value="Pro">Pro</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="editCompExp" class="form-label">Expiration Days *</label>
                                <input type="number" id="editCompExp" name="compExp" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="editCompVer" class="form-label">Version *</label>
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compVer" value="All" id="allVersion">
                                        <label class="form-check-label" for="allVersion">All</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compVer" value="Home" id="homeVersion">
                                        <label class="form-check-label" for="homeVersion">Home</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compVer" value="Office" id="officeVersion">
                                        <label class="form-check-label" for="officeVersion">Office</label>
                                    </div>                   
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="editCompFeat" class="form-label">Features *</label>
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compFeat" value="All" id="allFeatures">
                                        <label class="form-check-label" for="allFeatures">All</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compFeat" value="GPS" id="gpsFeature">
                                        <label class="form-check-label" for="gpsFeature">GPS</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compFeat" value="Extended user" id="extendedUserFeature">
                                        <label class="form-check-label" for="extendedUserFeature">Extended User</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compFeat" value="API Log" id="apiLogFeature">
                                        <label class="form-check-label" for="apiLogFeature">API Log</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="compFeat" value="Location Tracking" id="locationTrackingFeature">
                                        <label class="form-check-label" for="locationTrackingFeature">Location Tracking</label>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="save-edit">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>