<!-- Total Subscribers Registered -->
<div class="col-12 col-lg-4 col-xl-3 d-flex pb-3 pe-lg-3">
    <div class="card text-center bg-white border-0 shadow-sm w-100">
        <div class="card-body d-flex flex-column align-items-start justify-content-center row-gap-3 p-4">
            <p class="card-title text-muted mb-0 fs-3">Total Subscribers Registered</p>
            <div class="d-flex justify-content-start align-items-center w-100 mb-1">
                <div class="icon-container bg-primary text-white p-3 rounded-circle me-3">
                    <i class="bi bi-people-fill fs-2"></i>
                </div>
                <h1 class="card-text fw-bold mb-0"><%= CompanyCount %></h1>
            </div>
        </div>
    </div>
</div>

<!-- Metrics Overview -->
<div class="col-12 col-lg-8 col-xl-9 d-flex">
    <div class="row w-100">
        <% const metrics = [
        { title: 'Total Trial', icon: 'bi-clock-fill', color: 'bg-warning', value: TotalTrial },  
        { title: 'Total Pro', icon: 'bi-star-fill', color: 'bg-primary', value: TotalPro },  
        { title: 'Total Premium', icon: 'bi-stars', color: 'bg-success', value: TotalPremium },  
        { title: 'Total Home', icon: 'bi-house-door-fill', color: 'bg-info', value: TotalHome },  
        { title: 'Total Office', icon: 'bi-buildings-fill', color: 'bg-secondary', value: TotalOffice },  
        { title: 'Total Ver', icon: 'bi-geo-alt-fill', color: 'bg-danger', value: TotalVer },  
        { title: 'Daily Usage', icon: 'bi-graph-up', color: 'bg-primary', value: "" },  
        { title: 'Total Feat', icon: 'bi-tools', color: 'bg-info', value: TotalFeat },  
        { title: 'Total GPS', icon: 'bi-radar', color: 'bg-success', value: TotalGPS },  
        { title: 'Total Extended User', icon: 'bi-person-fill-gear', color: 'bg-primary', value: TotalExt },  
        { title: 'Total API Logs', icon: 'bi-globe', color: 'bg-dark', value: TotalApi },  
        { title: 'Total Loc Tracking', icon: 'bi-broadcast-pin', color: 'bg-danger', value: TotalLoc }               
        ]; %>
        <% metrics.forEach((metric, index) => { %>
            <div class="col-12 col-md-6 col-lg-4 col-xl-4 d-flex pb-3 <%= (index + 1) % 3 === 0 ? '' : 'pe-md-3' %>">
                <div class="card text-center w-100 bg-white border-0 shadow-sm d-flex flex-column h-100">
                    <div class="card-body d-flex flex-sm-row gap-3 align-items-center justify-content-start">
                        <div class="<%= metric.color %> text-white p-3 rounded-circle">
                            <i class="bi <%= metric.icon %> fs-2"></i>
                        </div>
                        <div class="text-start">
                            <p class="card-title text-muted mb-0 fs-6"><%= metric.title %></p>
                            <h1 class="card-text fw-bold mb-0"><%= metric.value %></h1>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>