<div class="container-fluid bg-white p-3 rounded-2 d-flex flex-column" style="height: calc(95vh - 110px - 125px);">
    <div id="notificationStatus" colspan="100%" class="text-center py-4">
        <div class="alert alert-info mb-0">
            <i class="bi bi-info-circle me-2"></i>
            <%= statusMessage %> 
        </div>
    </div>

    <div class="overflow-auto h-100">
        <div class="table-responsive">
            <table id="reportsTable" class="table table-striped table-bordered table-hover w-100">
                <thead>
                    <tr class="text-center">
                        <th>Company Code</th>
                        <th>Company Name</th>
                        <th>Time</th>
                        <th>Date</th>
                        <th>Activity</th>
                        <th>Subscription Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% companies.forEach(company => { %>
                        <tr>
                            <td><%= company.compCode %></td>
                            <td><%= company.compName %></td>
                            <td><%= company.time %></td>
                            <td><%= company.date %></td>
                            <td><%= company.activity %></td>
                            <td><%= company.subscriptionStatus %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="reports-page-info "></div>
</div>

<script src="/scripts/superadmin/datatables/reports.js"></script>
        <script src="/scripts/superadmin/reports.js"></script>
