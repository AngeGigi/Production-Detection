<head>
    <script src="../scripts/settings/location.js"></script>
</head>

<body>
    <div id="locationSettingsModal" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Manage Locations</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Location Inputs Container -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 id="locationFormTitle" class="mb-0">Add Location</h5>
                            <h5 id="updateLocationFormTitle" class="mb-0 d-none">Edit Location</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <!-- Form Section -->
                                <div class="col-md-6 pe-5">
                                    <form id="locationForm" action="/location-settings" method="POST" class="mb-4">
                                        <div class="mb-3">
                                            <label for="locationName" class="form-label">Location Name</label>
                                            <input type="text" id="locationName" name="name" class="form-control" required />
                                            <div id="nameError" class="text-danger small"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="locationLong" class="form-label">Map Longitude</label>
                                            <input type="number" step="any" id="locationLong" name="long" class="form-control" required />
                                            <div id="longError" class="text-danger small"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="locationLat" class="form-label">Map Latitude</label>
                                            <input type="number" step="any" id="locationLat" name="lat" class="form-control" required />
                                            <div id="latError" class="text-danger small"></div>
                                        </div>
                                        <button type="submit" id="markLocationButton" class="btn btn-success w-100">
                                            Submit Location
                                        </button>
                                    </form>
    
                                    <form id="updateLocationForm" method="POST" class="d-none">
                                        <div class="mb-3">
                                            <label for="updateName" class="form-label">Location Name</label>
                                            <input type="text" id="updateName" name="name" class="form-control" required />
                                            <div id="updateNameError" class="text-danger small"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="updateLong" class="form-label">Map Longitude</label>
                                            <input type="number" step="any" id="updateLong" name="long" class="form-control" required />
                                            <div id="updateLongError" class="text-danger small"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="updateLat" class="form-label">Map Latitude</label>
                                            <input type="number" step="any" id="updateLat" name="lat" class="form-control" required />
                                            <div id="updateLatError" class="text-danger small"></div>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button type="submit" id="updateLocationButton" class="btn btn-success flex-grow-1">
                                                Update Location
                                            </button>
                                            <button type="button" id="CancelupdateLocationButton" class="btn btn-danger">
                                                Cancel
                                            </button>
                                        </div>
                                    </form>
                                </div>
    
                                <!-- Map Section -->
                                <div class="col-md-6">
                                    <div id="map" class="border rounded-3" style="height: 100%; min-height: 300px;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <!-- Locations Table -->
                    <div class="card shadow-sm" style="height: 350px;">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Locations Tracking List</h5>
                        </div>
                        <div class="card-body overflow-auto">
                            <div class="table-responsive">
                                <table id="locationsTable" class="table table-striped table-bordered align-middle table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col">Location Name</th>
                                            <th scope="col">Latitude</th>
                                            <th scope="col">Longitude</th>
                                            <th scope="col" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Dynamic rows will be inserted here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</body>