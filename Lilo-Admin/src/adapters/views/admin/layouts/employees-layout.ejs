<% const viewType = currentView === 'card' ? 'card' : 'list'; %>

    <!-- Header Section with Filter and Export Button -->
    <div
        id="card-filters-container"
        class="d-flex justify-content-between align-items-center flex-shrink-0 bg-light pb-4"
        style="top: 55px; z-index: 1000"
    >
        <div class="d-flex w-100 justify-content-between align-items-center">
            <%- include(`../contents/employees/${viewType}-header.ejs`) %>
        </div>
    </div>

    <!-- Employees Container (Dynamic Card Section) -->
    <div id="employees-container" class="employees-container overflow-auto" style="height: calc(98vh - 110px - 125px);">
        <%- include(`../contents/employees/${viewType}-view.ejs`) %>
    </div>

    <!-- Pagination Section -->
    <div
        id="pagination-container"
        class="pagination d-flex justify-content-center align-items-center flex-shrink-0 bg-light pt-4"
        style="height: 30px"
    >
        <% if (currentView === 'card') { %>
            <div id="employeesCardPagination" class="d-flex"></div>
        <% } else if (currentView === 'list') { %>
            <div id="paginationControls"></div>
        <% } %>
    </div>

    <%- include('../components/employees/edit-emp.ejs') %>

    <!-- Include JavaScript -->
    <script src="/scripts/admin/employees/card.js"></script>
    <script src="/scripts/employees/edit-emp-info.js"></script>
    <script src="/scripts/employees/list.js"></script>
    <script src="/scripts/employees/del-emp.js"></script>
    <script src="/scripts/employees/export-employee.js"></script>

