                <div class="dtrs-search-area-list position-relative w-50" id="DTRSsearchList"></div>
                <button type="button"
                    class="card-btn-box-grid d-flex justify-content-center align-items-center btn btn-outline-secondary border-0 position-relative custom-tooltip"
                    data-tooltip="Card View">
