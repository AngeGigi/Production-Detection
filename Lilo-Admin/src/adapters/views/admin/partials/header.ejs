                </button>

                <button type="button"
                    class="list-btn-box-fill d-flex justify-content-center align-items-center btn btn-outline-secondary border-0 position-relative custom-tooltip"
                    data-tooltip="List View">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#433554"
                        class="bi bi-hdd-stack-fill" viewBox="0 0 16 16">
                        <path
                            d="M2 9a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1a2 2 0 0 0-2-2zm.5 3a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m2 0a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1M2 2a2 2 0 0 0-2 2v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2zm.5 3a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m2 0a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1" />
                    </svg>
                </button>
                <% } else if (title==='Rejected Logs' ) { %>
                    <div class="rejlog-search-area-list w-50" id="DTRSsearchList"></div>
                    <% } else if (title==='Start of Day' ) { %>
                        <div class="sod-dropdown filter-cards d-flex" id="filterCard">
                            <label for="cardSortCriteria" class="me-2 d-flex align-items-center">Sort:</label>
                            <select id="departmentDropdown" class="form-select w-auto">
                                <option value="all" selected>All</option>
                                <% departments.forEach(department=> { %>
                                    <option value="<%= department %>">
                                        <%= department %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <% } else if (title==='End of Day' ) { %>
                            <div class="eod-dropdown filter-cards d-flex" id="eodDropdown">
                                <label for="cardSortCriteria"
                                    class="me-2 d-flex align-items-center">Sort:</label>
                                <% if (departments && departments.length> 0) { %>
                                    <select id="departmentDropdown" class="form-select w-auto">
                                        <option value="all" selected>All</option>
                                        <% departments.forEach(department=> { %>
                                            <option value="<%= department %>">
                                                <%= department %>
                                            </option>
                                            <% }); %>
                                    </select>
                                    <% } %>
                            </div>
                            <div id="eodDateFilter"
                                class="d-flex justify-content-center align-items-center gap-2 py-1 px-2 bg-white rounded-2 shadow-sm">
                                <input type="date" id="dateFilter" class="form-control form-control-sm"
                                    style="width: 150px" />
                                <button id="filterButton" class="btn btn-primary btn-sm">Filter</button>
                                <button id="clearButton" class="btn btn-danger btn-sm">Clear</button>
                            </div>
                            <div class="end-of-day-title d-flex justify-content-center align-items-center flex-shrink-0"
                                style="height: 25px">
                                <p id="currentDate"><strong>
                                        <%= new Date().toLocaleString('default', { month: 'long' }) + ' ' + new
                                            Date().getDate() + ', ' + new Date().getFullYear() %>
                                    </strong></p>
                            </div>
                            <% } %>