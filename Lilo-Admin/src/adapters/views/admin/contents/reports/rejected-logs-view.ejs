<div class="container-fluid bg-white p-3 rounded-2 d-flex flex-column"  style="height: calc(95vh - 110px - 125px);">
    
    <!-- Uncomment when min-width and width are set for table columns -->
    <!-- <table id="rejectedlogsTableHeader" class="table table-striped table-bordered dataTable"></table> -->
    
    <div class="overflow-auto h-100">
        <div class="table-responsive">
            <table id="rejectedlogsTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="text-center">
                        <th>No.</th>
                        <th>Employee ID</th>
                        <th>Department</th>
                        <th>Employee Name</th>
                        <th>Time</th>
                        <th>Date</th>
                        <th>Action</th>
                        <th>Image</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody id="rejectedlogsTableBody" class="overflow-auto">
                    <% logs.forEach((log, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= log.empID %></td>
                            <td><%= log.dept %></td>
                            <td>
                                <%= log.fname %> <%= log.mname ? log.mname + ' '
                                : '' %> <%= log.lname %>
                            </td>
                            <td><%= log.time %></td>
                            <td><%= log.date %></td>
                            <td><%= log.act %></td>
                            <td>
                                <img
                                    class="rej-log-pic"
                                    src="<%= log.img ? 'data:image/jpeg;base64,' + log.img : '/pics/default-pic.jpg' %>"
                                    alt="Employee Picture"
                                    loading="lazy"
                                    style="width: 100px;"
                                    id="rejlog-thumbnail-img"
                                />
                            </td>
                            <td>
                                <%= log.distance.toFixed(2) %> km away from <%=
                                log.address %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="rejlog-page-info "></div>
</div>